        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/source_image"
            android:src="@drawable/default_source_image"
            android:layout_width="70dp"
            android:layout_height="79dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            app:riv_border_color="#DAF4FC"
            app:riv_border_width="5px"
            app:riv_corner_radius="25px"
            app:riv_mutate_background="true" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/source_name"
                    android:layout_marginStart="10dp" android:layout_weight="8"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

